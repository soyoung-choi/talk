    * {
      margin: 0;
      padding: 0;
    }

    body {
      background-color: #ebeaf8;
    }
    
    ul {
      height: calc(100% - 38%);
      overflow-y: scroll;
    }

    li {
      list-style-type : none;
      padding: 10px 30px;
      font-weight: 500;
      overflow: auto;
      text-overflow: ellipsis;
      white-space: break-spaces;
    }

    p {
      color: #b5a8ff;
      font-weight: 800;
      font-size: 30px;
      padding-top: 10px;
      text-align: center;
      margin-bottom: 30px;
    }

    input {
      height: 50%;
      width: 70%;
      border-radius: 10px;
      margin: 0px 10px 20px 10px;
      box-shadow: inset 4px 4px 5px #eeeeee, inset -4px -4px 5px #ffffff !important;
      font-size: 15px;
      border: none;
      padding-left: 20px;
    }

    input::placeholder {
      color: #999;
    }

    input:focus {
      outline: none;
      border: 1px solid #b5a8ff;
    }

    button {
      margin: 0px 10px 20px 10px;
      border-radius: 10px;
      background-color: #b5a8ff;
      color: #fff;
      height: 50%;
      width: 20%;
      border: 0px;
      font-weight: 300;
      font-size: 16px;
    }

    .container {
      margin: 5% auto;
      position: relative;
      width: 100%;
      max-width: 70%;
      background-color: #fff;
      height: 80%;
      border-radius: 10px;
      padding: 30px 0px;
    }

    .inputContainer {
      bottom: 0px;
      border-radius: 10px;
      position: absolute;
      height: 15%;
      width: 100%;
      text-align: center;
    }

